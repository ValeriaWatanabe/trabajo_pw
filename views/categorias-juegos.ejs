<!DOCTYPE html>
<html>
    <head>
        <title>TIMBEAR</title>
        <meta charset="utf-8" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    </head>
    <body class="container">
        <h2>Mantenimiento de Categorías de Juego</h2>
        <a class="btn btn-success" href="/categoria/new">Nuevo</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre de la categoría</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% categorias.forEach( (categoria) => { %>
                    <tr>
                        <td><%= categoria.id%></td>
                        <td><%= categoria.nombre%></td>
                        <td>
                            <a href="/categoria/modificar/<%= categoria.id %>">Editar</a>
                            <a href="/categoria/eliminar/<%= categoria.id %>">Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a class="btn btn-primary" href="/clienteVsimple">Ir a la vista simple de clientes</a>
        <a class="btn btn-primary" href="/banners">Ir a la vista banners</a>
    </body>
</html>