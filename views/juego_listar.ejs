<!DOCTYPE html>
<html>
    <head>
        <title>TIM-BEAR</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    </head>
    <body class="container">

        <%- include('menu') %>
        <h2>Administrar Juegos</h2>
        <a class="btn btn-success" href="/juego_listar/juego_crear">Crear</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Categor√≠a</th>
                    <th>Acciones</th>

                </tr>
            </thead>
            <tbody>
                <% juegos.forEach( (juego) => { %>
                    <tr>
                        <td><%= juego.id %></td>
                        <td><%= juego.nombre %></td>
                        <td><%= juego.id_categoria%></td>
                        <td>
                            <a href="/juego_listar/juego_editar/<%= juego.id %>" >Editar</a>
                            <a href="/juego_listar/juego_eliminar/<%= juego.id %>" >Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <%- include('footer') %>
    </body>
</html>