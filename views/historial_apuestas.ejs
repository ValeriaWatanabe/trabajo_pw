                            </td>

                            <td>
                                <div>
                                    

                                </div>
                                <!-- VISITA-->
                                <div>
                                    <%=juego.factor_apostado%> 

                                </div>
                            </td>

                            <td>
                                <div>
                                    

                                </div>
                                <!-- VISITA-->
                                <div>
                                    <%=juego.estado%> 

                                </div>
                            </td>

                            <td>
                                <div>
                                    

                                </div>
                                <!-- VISITA-->
                                <div>
                                    <%=juego.monto%> 

                                </div>
                            </td>

                            <td>
                                <div>
                                    

                                </div>
                                <!-- VISITA-->
                                <div>
                                    <%=juego.resultado_Apostado%> 

                                </div>
                            </td>
                         
                        </tr>
                    
                        <% }) %>
            </tbody>


        </table>
        
    </div>
    

</div>



</div>


    <!-- ENVIAR DATOS APUESTA-->
