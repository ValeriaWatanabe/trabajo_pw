                                <div>
                                    <%=juego.categoria%> 

                                </div>
                            
                            </td>

                          


                            <td>
                                <div>
                                    

                                </div>
                                <!-- VISITA-->
                                <div>
                                    <%=juego.juego%>

                                </div>
                            </td>

                            <td>
                                <div>
                                    

                                </div>
                                <!-- VISITA-->
                                <div>
                                    <%=juego.equipo_apostado%>

